@{
    ViewBag.Title = "Rosters";
}

<h2>Rosters</h2>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td></td>
                    <td></td>
                    <td>Roster Name</td>
                    <td>Enrollment</td>
                </tr>
            </thead>
            <tbody data-bind="foreach: allRosters">
                <tr>
                    <td>
                        <a data-bind="attr: {href: rosterViewLink}">
                            <h5>View Enrollees</h5>
                        </a>
                    </td>
                    <td>
                        <a data-bind="attr: {href: rosterSkillsLink}">
                            <h5>View Skills</h5>
                        </a>
                    </td>
                    <td data-bind="text: name"></td>
                    <td data-bind="text: enrollment"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            var viewModel = ko.mapping.fromJS(@Html.Raw(Model));
            ko.applyBindings(viewModel);
        });
    </script>
}
